<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.arthur.cardviewtenderfromjson.MoreDetailFragment">

    <LinearLayout
        android:id="@+id/linerLayoutInfo"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/textViewInfoName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Name "/>

        <TextView
            android:id="@+id/textViewInfoRegion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="region"/>

    </LinearLayout>

    <TextView
        android:id="@+id/textViewInfoDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="30dp"
        tools:layout_editor_absoluteX="8dp"
        android:text="description"/>

    <!--<TextView
        android:id="@+id/textViewMoreDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="54dp" /> -->

</android.support.constraint.ConstraintLayout>